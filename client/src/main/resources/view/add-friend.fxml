<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.client.controller.AddFriendController"
      style="-fx-background-color: white; -fx-padding: 20;">

    <Label text="Thêm Bạn Bè" textFill="#0084ff">
        <font><Font name="Segoe UI Bold" size="18"/></font>
    </Label>

    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Nhập tên hoặc username..." HBox.hgrow="ALWAYS" onAction="#handleSearch"/>
        <Button text="Tìm" onAction="#handleSearch" defaultButton="true" style="-fx-background-color: #0084ff; -fx-text-fill: white;"/>
    </HBox>

    <Label text="Kết quả tìm kiếm:" />
    <ListView fx:id="resultList" VBox.vgrow="ALWAYS" prefHeight="250"/>

    <Button text="Đóng" onAction="#handleClose" maxWidth="Infinity"/>
</VBox>